<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    tools:context=".MainActivity">

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/add_to_list"
        android:textColor="#FFFFFF"
        android:textColorHint="#e1e1e1e1"
        android:hint="Add new task" />

    <Button
        android:id="@+id/add_to_list_btn"
        android:text="Add To List"
        android:textColor="#ff575656"
        android:textSize="30sp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/add_to_list"
        android:background="@drawable/buttonshape"
        android:shadowColor="#fff1adff"
        />

    <ListView
        android:id="@+id/list_item"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@id/add_to_list_btn"
        android:choiceMode="multipleChoice"
        >

    </ListView>

</RelativeLayout>